<%- get_layout("header") %>

<div id="content" class="mt-4 mb-4">
    <div class="container">
        <h1 class="text-center h3 mb-4">Thanh toán</h1>
        <div class="row">
            <!-- Cột trái: Form thanh toán -->
            <div class="col-md-6">
                <form method="POST" action="/checkout">
                    <!-- Thông tin người nhận -->
                    <h5>Thông tin khách hàng</h5>
                    <div class="form-group mt-3">
                        <label for="fullname" class="h6">Họ và tên (*)</label>
                        <input type="text" class="form-control rounded" id="fullname" name="fullname" placeholder="Họ và tên" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="phone" class="h6">Số điện thoại (*)</label>
                        <input type="tel" class="form-control rounded" id="phone" name="phone" placeholder="Số điện thoại" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="email" class="h6">Email</label>
                        <input type="email" class="form-control rounded" id="email" name="email" placeholder="Email (nếu có)">
                    </div>
                    <div class="form-group mt-3">
                        <label for="address" class="h6">Địa chỉ giao hàng (*)</label>
                        <input type="text" class="form-control rounded" id="address" name="address" placeholder="Địa chỉ nhận hàng" required>
                    </div>

                    <!-- Phương thức thanh toán -->
                    <h5 class="mt-4">Phương thức thanh toán</h5>
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="payment_method" id="cod" value="COD" checked>
                        <label class="form-check-label" for="cod">Thanh toán khi nhận hàng (COD)</label>
                    </div>
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="payment_method" id="banking" value="Banking">
                        <label class="form-check-label" for="banking">Chuyển khoản ngân hàng</label>
                    </div>

                    <!-- Ghi chú -->
                    <div class="form-group mt-4">
                        <label for="note" class="h6">Ghi chú (nếu có)</label>
                        <textarea class="form-control rounded" id="note" name="note" rows="3" placeholder="Ghi chú đơn hàng..."></textarea>
                    </div>

                    <!-- Nút thanh toán -->
                    <button type="submit" class="btn btn-primary btn-block mt-4">Hoàn tất thanh toán</button>
                </form>
            </div>

            <!-- Cột phải: Tóm tắt giỏ hàng -->
            <div class="col-md-6">
                <h5>Tóm tắt giỏ hàng</h5>
                <div class="table-responsive mt-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Tên</th>
                                <th>SL</th>
                                <th>Giá</th>
                                <th>T.Tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img src="images/product-1.jpg" width="50" /></td>
                                <td><a href="/san-pham/1">Sony X6</a></td>
                                <td>1</td>
                                <td>500.000đ</td>
                                <td>500.000đ</td>
                            </tr>
                            <tr>
                                <td><img src="images/product-1.jpg" width="50" /></td>
                                <td><a href="/san-pham/2">Sony X6</a></td>
                                <td>1</td>
                                <td>500.000đ</td>
                                <td>500.000đ</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-right font-weight-bold">Tổng cộng: 1.000.000đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- get_layout("footer") %>
